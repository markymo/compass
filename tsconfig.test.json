{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "esModuleInterop": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*",
        "scripts/**/*"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        },
        "transpileOnly": true
    }
}